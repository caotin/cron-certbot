# Email Notification Settings
EMAIL_NOTIFICATIONS=false
EMAIL_FROM=noreply@example.com
EMAIL_TO=admin@example.com
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=username
EMAIL_SMTP_PASS=password

# Certificate Renewal Settings
CERT_CHECK_SCHEDULE=0 0 * * *
CERTBOT_COMMAND=sudo certbot renew --non-interactive
DAYS_BEFORE_EXPIRY=30
CERT_DIRECTORY=/etc/letsencrypt/live
LOG_FILE=certbot-renewal.log

# Nginx Settings
RESTART_NGINX=true
NGINX_RESTART_COMMAND=sudo systemctl restart nginx 